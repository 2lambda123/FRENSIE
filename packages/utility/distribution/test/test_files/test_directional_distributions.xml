<ParameterList name="Directional Distributions">

  <ParameterList name="Directional Distribution A">
    <Parameter name="Theta Distribution" type="Uniform Distribution"
	       value="{0,2pi,1}"/>
    <Parameter name="Mu Distribution" type="Uniform Distribution"
	       value="{-1.0,1.0,2}"/>
  </ParameterList>

  <ParameterList name="Directional Distribution B">
    <Parameter name="Theta Distribution" type="Delta Distribution"
	       value="{0}"/>
    <Parameter name="Mu Distribution" type="Delta Distribution"
	       value="{1}"/>
    <Parameter name="Axis" type="string" value="Y"/>
  </ParameterList>

  <ParameterList name="Directional Distribution C">
    <Parameter name="Mu Distribution" type="Delta Distribution"
	       value="{-pi/4}"/>
  </ParameterList>

  <ParameterList name="Directional Distribution D">
    <Parameter name="Direction" type="Array(double)" value="{1.0,-1.0,1.0}"/>
  </ParameterList>

</ParameterList>
