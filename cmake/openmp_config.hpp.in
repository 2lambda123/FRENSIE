// Define if we want to use OpenMP
// NOTE: If the CMake variable HAVE_${PROJECT_NAME}_OPENMP is defined the macro
//       HAVE_${PROJECT_NAME}_OPENMP will be set. If the CMake variable does
//       not exist, the macro will be commented out
#ifndef OPENMP_CONFIGURE_HPP

${CMAKEDEFINE} HAVE_${PROJECT_NAME}_OPENMP

#ifdef HAVE_${PROJECT_NAME}_OPENMP
#include <omp.h>
#endif

#endif // end OPENMP_CONFIGURE_HPP
