# System imports
import numpy
import sys
import unittest
import PyTrilinos.Teuchos
from optparse import *

# Parse the command-line arguments
parser = OptionParser()
parser.add_option("-v", "--verbosity", type="int", dest="verbosity", default=2,
                  help="set the verbosity level [default 2]")
parser.add_option("-f", "--xmlfile", type="string", dest="xmlfile",
                  help="set the xml file that DagMC will initialized with")
options,args = parser.parse_args()

from testingHelpers import importPyFrensieModuleFromBuildDir
DagMC = importPyFrensieModuleFromBuildDir('Geometry.DagMC')

#-----------------------------------------------------------------------------#
# Tests.
#-----------------------------------------------------------------------------#
# Test the initializeDagMC method
class InitializeDagMCTestCase(unittest.TestCase):
    "TestCase class for Geometry.DagMC.initializeDagMC method"

    def setUp(self):
        self.geom = DagMC.DagMC

    def testInitializeDagMC(self):
        "*Test Geometry.DagMC.initailizeDagMC method"
        self.assertFalse(self.geom.isInitialized())
        source = PyTrilinos.Teuchos.FileInputSource( options.xmlfile )
        xml_obj = source.getObject()
        geom_init_list = PyTrilinos.Teuchos.XMLParameterListReader().toParameterList( xml_obj )

        DagMC.initializeDagMC( geom_init_list )
        self.assertTrue(self.geom.isInitialized())

#-----------------------------------------------------------------------------#
# Custom main
#-----------------------------------------------------------------------------#
if __name__ == "__main__":

    # Create the test suite object
    suite = unittest.TestSuite()

    # Add the test cases to the test suite
    suite.addTest(unittest.makeSuite(InitializeDagMCTestCase))
    
    print >>sys.stderr, \
        "\n**************************************\n" + \
        "Testing Geometry.DagMC.initializeDagMC \n" + \
        "**************************************\n"
    result = unittest.TextTestRunner(verbosity=options.verbosity).run(suite)

    errs_plus_fails = len(result.errors) + len(result.failures)

    if errs_plus_fails == 0:
        print "End Result: TEST PASSED"

    # Delete the suite
    del suite

    # Exit
    sys.exit(errs_plus_fails)

#-----------------------------------------------------------------------------#
# end tstGeometry.DagMC.initializeDagMC.py
